          $("#name").focus();
        }else if(Subject=="")
        {
         $("#subject").focus();
       }else if(Email=="")
       {
        $("#email").focus();
      }else if(Message=="")
      {
       $("#message").focus();
     }else{

       $("#sendMes").show();
       $("#sendMail").hide();

       $.ajax({
        url: '/contact',
        type: 'POST',
        dataType: 'json',
                    //data: $("#email").val(),
