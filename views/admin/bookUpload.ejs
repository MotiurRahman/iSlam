<%- contentFor('body')%>  

 

 <div class="container">
<br>
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Upload Book
                    <small>Subheading</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a>
                    </li>
                    <li class="active">Insert</li>
                </ol>
            </div>
        </div>
  
<form class="form-horizontal" role="form" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label class="control-label col-sm-2" for="author">Author Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="author" name="author" placeholder="Enter Tittle" required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="title">Book Title:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter Tittle" required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="bookInfo">Book Info:</label>
      <div class="col-sm-10">
        <textarea name="bookInfo" class="form-control" rows="3"></textarea>
      </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="bookurl">Download URL:</label>
      <div class="col-sm-10">
        <input type="url" class="form-control" id="bookurl" name="bookurl" placeholder="Enter Download URL" >
      </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="title">Book Type:</label>
      <div class="col-sm-10">
              
           <select name="booktype" style="width: 230px; height: 35px;" required="required">
        <option value="quran">Al Quran</option>
        <option value="hadith">Hadith</option>
        <option value="others">Others</option>
         </select>
      </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="bookurl">Book Image:</label>
      <div class="col-sm-10">
        <input type="file" class="form-control" id="bookImage" name="bookImage" required>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Upload</button>
        
      </div>
    </div>
  </form>
  </div>



  


